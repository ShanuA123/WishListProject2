<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/MyThemeTest">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Items"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/et_ItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_ItemName"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:hint="Item Name"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_StoreName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_Price"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bt_Submit"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_StoreName"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:hint="Store Name Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_Submit"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>